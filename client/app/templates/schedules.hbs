{{outlet}}
<h1>Schedules</h1>


{{#each model.schedules as |schedule|}}
  <h3>
    {{schedule.sitter.firstName}}
    is sitting for the
    {{schedule.client.familyName}}
    on
    {{format-date schedule.date}}
  </h3>
{{/each}}

<label>
  Start date:
  {{pikaday-input value=startsAt minDate=minDate theme="dark-theme"}}
</label>

<h2>Select start time:</h2>

<p>
  Start time: {{startTime}}
</p>
<p>
  End time: {{endTime}}
</p>

{{#unless startTime}}
  {{time-selector action='setStartTime'}}
{{/unless}}

{{#if startTime}}
  {{time-selector action='setEndTime'}}
{{/if}}


{{sit-select
  label='Who will be the sitter'
  prompt='Select a baby sitter'
  content=model.sitters
  optionValue='id'
  optionLabel='firstName'
  value=sitter
  isEditing=true
  name="sitter"
  onSelect='sitterSelected'}}

{{sit-select
  label='Sitting for Who'
  prompt='Select a Cleint'
  content=model.clients
  optionValue='id'
  optionLabel='familyName'
  value=familyName
  isEditing=true
  name="client"
  onSelect='clientSelected'}}

<button type="button" name="button" {{action 'save'}}>Save</button>
