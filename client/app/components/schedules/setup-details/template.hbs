<form class="ui form">

  <div class="field">
    <label>Start date:</label>
    {{pikaday-input value=startsAt minDate=minDate theme="dark-theme"}}
  </div>

  {{sit-select
    label='Sitting for Who'
    prompt='Select a Cleint'
    content=clients
    optionValue='id'
    optionLabel='familyName'
    value=familyName
    isEditing=true
    name="client"
    class='field'
    onSelect=(action 'clientSelected')}}

  {{sit-select
    label='Who will be the sitter'
    prompt='Select a baby sitter'
    content=sitters
    optionValue='id'
    optionLabel='firstName'
    value=sitter
    isEditing=true
    name="sitter"
    class='field'
    onSelect=(action 'sitterSelected')}}

  {{link-to 'Continue' 'schedules.setup.start-time' class='ui primary button fluid'}}
</form>
