<form class="ui form">

  <div class="field {{if isStartDateInvalid 'error'}}">
    <label>Start date:</label>
    {{pikaday-input value=date minDate=minDate theme="dark-theme"}}
    {{#if isStartDateInvalid}}
      <p class="ui {{if isStartDateInvalid 'error'}}">{{v-get this 'startDate' 'message'}}</p>
    {{/if}}
  </div>

  {{sit-select
    label='Sitting for Who'
    prompt='Select a Cleint'
    content=clients
    optionValue='id'
    optionLabel='familyName'
    value=familyName
    isEditing=true
    name="client"
    class='field'
    isInvalid=isClientInvalid
    error=(v-get this 'client' 'message')
    onSelect=(action 'clientSelected')}}

  {{sit-select
    label='Who will be the sitter'
    prompt='Select a baby sitter'
    content=sitters
    optionValue='id'
    optionLabel='firstName'
    value=sitter
    isEditing=true
    name="sitter"
    class='field'
    isInvalid=isSitterInvalid
    error=(v-get this 'sitter' 'message')
    onSelect=(action 'sitterSelected')}}

  <button {{action 'advance'}} type="button" name="button" class='ui primary button fluid'>Continue</button>
</form>
